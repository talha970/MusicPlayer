<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:layout_gravity="center_vertical"
    android:weightSum="3"

xmlns:android="http://schemas.android.com/apk/res/android">

        <FrameLayout
            android:id="@+id/player_col"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/music_album_cover"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_weight="3"
                    android:paddingLeft="12dp"
                    android:text="Example Music Song"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="top"
                    android:layout_weight="0"
                    android:gravity="end"
                    android:src="@drawable/ic_play_arrow_black_48dp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/player_exp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/music_album_cover"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin"
                    android:layout_weight="3"
                    android:paddingLeft="12dp"
                    android:text="Example Music Song"
                    android:textColor="#444"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:gravity="right"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_queue_music_black_48dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="12dp"
                    android:gravity="right"
                    android:layout_weight="0"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_more_vert_black_48dp" />
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
